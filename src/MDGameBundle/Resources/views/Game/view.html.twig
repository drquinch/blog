{% block fixed_design %}

	<div id="main">
		<div id="right_menu">
			
			{% if game.licence is not null %}
			<div id="licence_link">
				<h4>LICENCE</h4>
				<p id="img_licence"><a href="{{ path('md_licence_view', {'licence_id': game.licence.id}) }}"><img src="" alt=""><span id="licence_name">{{ game.licence.name|upper }}</span></a></p>
			</div>
			{% endif %}
			
			<ul id="amazon_links_right_menu">
				<li><a href=""><img src="" alt=""></a></li>
			</ul>

			{% if game.licence %}
			<h4>Jeux de la licence</h4>
			<ul class="similar_games">
				<li><a href=""><img src="" alt=""><span class="similar_games_name">Nom Jeu</span></a></li><!--
				--><li><a href=""><img src="" alt=""><span class="similar_games_name">Nom Jeu</span></a></li><!--
				--><li><a href=""><img src="" alt=""><span class="similar_games_name">Nom Jeu</span></a></li><!--
