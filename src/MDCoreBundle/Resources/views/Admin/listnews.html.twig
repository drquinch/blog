{% extends "MDCoreBundle::layoutadmin.html.twig" %}

{% block title %}administration de news{% endblock %}

{% block body %}

{% include 'MDCoreBundle:Admin:menu.html.twig' %}
<p><a href="{{ path('md_core_news_create') }}">Ajouter une news</a></p>

<div id="content">
<div id="list_news">

<ul>
{% for n in news %}
<li><a href="{{ path('md_core_news_view', {'id': n.id}) }}">{{ n.title }}</a> <a href="{{ path ('md_core_news_edit', {'id': n.id}) }}">edit</a>
{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('md_core_news_delete', {'id': n.id}) }}">delete</a>{% endif %}
</li>
{% endfor %}
</ul>

<ul>
{% for page in paging %}
<li><a href="{{ path('md_core_admin_list_articles_news', {'batch': batch, 'page': page}) }}">{{ page }}</a></li>
{% endfor %}
</ul>

</div>
</div>
{% endblock %}
